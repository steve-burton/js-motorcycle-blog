{{yield}}
<h2>New blog post</h2>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author name</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="title">Headline</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="body">Body text</label>
      {{input value=body id="body" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="credit">Photo credit</label>
      {{input value=credit id="credit" class="form-control"}}
    </div>

    <button  class="btn"{{action 'saveBlog'}}>Save</button>
  </form>
</div>
<div class="btn"> {{#link-to 'index'}}Return home{{/link-to}}</div>
